<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransitionTimerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_side"
            android:paddingTop="@dimen/padding_top"
            android:paddingRight="@dimen/padding_side"
            android:paddingBottom="@dimen/transition_padding_bot">

            <TextView
                android:id="@+id/timer_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zero_seconds_text"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>